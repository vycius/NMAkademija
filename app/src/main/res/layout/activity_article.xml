<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/unit4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/new_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/article_foto"
            android:gravity="center"
            tools:src="@drawable/leon" />

        <TextView
            android:id="@+id/new_description"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Vyksta NMA vasaros sesija Nidoje" />

        <TextView
            android:id="@+id/new_html_view"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="KaÅ¾kas su html tagais." />

    </LinearLayout>
</ScrollView>

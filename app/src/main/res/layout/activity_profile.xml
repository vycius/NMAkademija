<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/unit4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_marginBottom="@dimen/unit2">

        <ImageView
            android:id="@+id/profile_pic_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/profile_picture"
            tools:src="@drawable/leon" />

        <TextView
            android:id="@+id/name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unit4"
            android:hint="@string/name_hint"
            android:textSize="@dimen/text20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/unit1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/unit1"
            android:text="@string/room"
            android:textSize="@dimen/text18" />

        <TextView
            android:id="@+id/room_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text18"
            tools:text="123" />

    </LinearLayout>

    <TextView
        android:id="@+id/phone_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/unit1"
        android:autoLink="phone"
        android:hint="@string/phone_hint"
        android:textSize="@dimen/text18"
        tools:text="+37012345678" />

    <TextView
        android:id="@+id/email_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/unit1"
        android:autoLink="email"
        android:hint="@string/email_hint"
        android:textSize="@dimen/text18"
        tools:text="email@mail.com" />

    <TextView
        android:id="@+id/bio_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:hint="@string/bio_hint"
        android:textSize="@dimen/text18" />
</LinearLayout>